---
import info from "src/data/info.json";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="flex flex-col sm:flex-row">
  <h2 class="w-60 mt-16 font-semibold text-xl">{title}</h2>
  <div class="w-full">
    {
      info.experience.map((data) => (
        <div class="my-16">
          <div class="flex justify-between flex-wrap flex-col sm:flex-row">
            <h3 class="text-xl font-semibold">{data.name}</h3>
            <p>
              {data.startDate} - {data.endDate}
            </p>
          </div>
          <p class="text-sm mt-3 text-blue-600">{data.location}</p>
          <ul class="mt-3">
            {data.task.map((data) => (
              <li>{data}</li>
            ))}
          </ul>
          <div class="mt-3">
            {data.skill.map((data) => (
              <span class="text-sm bg-gray-200 rounded-full px-2 py-1 mr-2 my-2">
                {data}
              </span>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</section>
